<div class="d-flex p-2 justify-content-between">
<h3>ALL Suppliers</h3>
<Button class="btn btn-secondary text">
  <%= link_to "Add New Supplier", new_supplier_path,:class => "text-light"%>
</Button>
</div>

<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Mobile No.</th>
        <th scope="col">City</th>
        <th scope="col">User Info.</th>
      </tr>
    </thead>
  <% @suppliers.each do |i| %>
    <tbody>
      <tr>
        <td><%= i.id %></td>
        <td><%= i.name %></td>
        <td><%= i.mobileno %></td>
        <td><%= i.city %></td>
        <td><%= link_to "Show", supplier_path(i) %></td>
        <td><%= link_to "Delete", supplier_path(i), data:{method: :delete, confirm: "Are you Sure?"}%></td>  
    </tr>
    </tbody>
  <% end %>
</table>
